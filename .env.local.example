# Ghost Job Detector Dashboard - Environment Configuration

# API Base URL - Update this to point to your backend API
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Development settings
VITE_APP_ENV=development
VITE_DEBUG_MODE=true

# Core Database and Services
DATABASE_URL=postgresql://username:password@localhost:5432/ghost_job_detector
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# AI Agent Feature Flags
AGENT_ENABLED=true
AGENT_USE_SERVER_FALLBACK=true
NEXT_PUBLIC_AGENT_ENABLED=true
NEXT_PUBLIC_AGENT_USE_SERVER_FALLBACK=true

# Upstash Redis (for rate limiting and idempotency)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Groq AI API (server fallback)
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768

# Queue Configuration
QUEUE_BATCH_SIZE=10
QUEUE_RETRY_ATTEMPTS=3

# Optional: Analytics and monitoring
# VITE_ANALYTICS_ID=your_analytics_id
# VITE_SENTRY_DSN=your_sentry_dsn